<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "modernizr" %>
    <%= javascript_include_tag  "all" %>
    <%= javascript_include_tag  "highlight/highlight.pack" %>
    <script>hljs.initHighlightingOnLoad();</script>
    <% concat(partial "partials/ga") if build? %>
  </head>


  <body class="<%= page_classes %>">

    <div class="row">
        <div class="small-12 columns">
          <a href="http://mattlima.github.io/mooog/"><span class="supertitle label radius">Mooog examples</span></a>
              <h1><%= locals[:ordinal] %>. <%= locals[:name] %></h1>
        </div>
    </div>


    <%= yield %>


    <div class="row">
        <div class="small-6 columns text-left">
            <% if(locals[:ordinal].to_i > 1) %>
                <% link_to toc_link(locals[:prev_example][:name]) do %>
                <div class="button"><%= "<< #{locals[:ordinal] - 1}. #{locals[:prev_example][:name]}" %></div>
                <% end %>
            <% end %>
        </div>
        <div class="small-6 columns text-right">
            <% if locals[:next_example].present? %>
                <% link_to toc_link(locals[:next_example][:name]) do %>
                <div class="button"><%= "#{locals[:ordinal] + 1}. #{locals[:next_example][:name]} >>" %></div>
                <% end %>
            <% end %>
        </div>
    </div>
     <%= partial 'partials/footer', locals: locals %>


     <%= javascript_include_tag "body-end" %>

  </body>
</html>
